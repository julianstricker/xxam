<!DOCTYPE HTML PUBLIC "-//W3C//DTD HTML 4.01//EN" "http://www.w3.org/TR/html4/strict.dtd">
<html>
    <head>
        <meta name="viewport" content="width=device-width, initial-scale=1, maximum-scale=1, user-scalable=no">
        <meta http-equiv="Content-Type" content="text/html; charset=utf-8" />
        <title>Xxam</title>

        {% block stylesheets %}
            {% stylesheets
            'bundles/xxamcore/css/*'
            'ext-theme-carbon/resources/codaxy-theme-carbon-all.css'
            'assets/vendor/extjs/build/packages/font-awesome/resources/font-awesome-all.css'
            filter='cssrewrite' %}
            <link rel="stylesheet" type="text/css" href="{{ asset_url }}" />
            {% endstylesheets %}
        {% endblock %}


        <script type="text/javascript">
           var menu={{ menu|jsonwithfunctions }}
           var xxam_core_homepage='{{path('xxam_core_homepage')}}';
           var statefulservicepath= '{{path('xxam_core_statefulservice')}}';
           var setchatidurl= '{{path('xxam_comm_setchatid')}}';
           var chattoken='{{token}}';
           var realm='realm{{tenant_id}}';
           var groups=[{% for group in app.user.groups %}{% if not loop.first %},{% endif %}'{{ group.name }}'{% endfor %}];
           var xxam_core_getlogentries='{{path('xxam_core_getlogentries')}}';
           var logentrieswindowtitle='{%trans%}Log entries{%endtrans%}';
        </script>
        {% block javascripts %}
            {%if app.environment == 'dev' %}
                {% javascripts
                    'assets/vendor/extjs/build/ext-all-debug.js'
                    'ext-theme-carbon/codaxy-theme-carbon.js'
                    '@XxamCoreBundle/Resources/public/js/adapter.js'
                    '@XxamCoreBundle/Resources/public/js/layout.js'
                    'assets/vendor/extjs/build/packages/charts/classic/charts-debug.js'
                %}
                <script type="text/javascript" src="{{ asset_url }}"></script>
                {% endjavascripts %}
            {% else %}
                {% javascripts
                'assets/vendor/extjs/build/ext-all.js'
                'ext-theme-carbon/codaxy-theme-carbon.js'
                '@XxamCoreBundle/Resources/public/js/adapter.js'
                '@XxamCoreBundle/Resources/public/js/layout.js'
                'assets/vendor/extjs/build/packages/charts/classic/charts.js'
                %}

                <script type="text/javascript" src="{{ asset_url }}"></script>
                {% endjavascripts %}

            {% endif %}
        {% endblock %}
    </head>
    <body>
    </body>
</html>
